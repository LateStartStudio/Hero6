{
  "$schema": "https://raw.githubusercontent.com/DotNetAnalyzers/StyleCopAnalyzers/master/StyleCop.Analyzers/StyleCop.Analyzers/Settings/stylecop.schema.json",

  "settings": {
    "indentation": {
      "indentationSize": 4,
      "tabSize": 4,
      "useTabs": false
    },

    "documentationRules": {
      "companyName": "Late Start Studio",
      "copyrightText": "Copyright (C) {companyName}\nThis file is subject to the terms and conditions of the {licenseName} license specified in the file\n{licenseFile}, which is a part of this source code package.",
      "variables": {
        "licenseName": "MIT",
        "licenseFile": "'LICENSE.CODE.md'"
      }
    },

    "orderingRules": {
      "usingDirectivesPlacement": "outsideNamespace"
    }
  }
}
